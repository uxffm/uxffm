 />


  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Kostenloses Erstgespräch',
        href: '/kontakt',
        target: '',
        icon: 'tabler:message',
      },
    ]}
  >
    <Fragment slot="title">
      Bereit durchzustarten?<br class="block sm:hidden" /> <span class="sm:whitespace-nowrap">Lass uns sprechen!</span>
    </Fragment>

