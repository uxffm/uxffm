---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  actions?: string | CallToAction[];
  image?: string | any; // TODO: find HTMLElementProps
  layout?: 'default' | 'split'; // default is centered, split is text-left/image-right
}

const {
  id,
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),
  layout = 'default',
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      {layout === 'split' ? (
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center">
            <div class="text-left lg:order-1">
              {
                tagline && (
                  <p
                    class="text-sm text-secondary dark:text-blue-200 font-bold tracking-wide uppercase mb-2"
                    set:html={tagline}
                  />
                )
              }
              {
                title && (
                  <h1
                    class="text-4xl md:text-5xl font-bold leading-tight tracking-tight mb-3 font-heading dark:text-gray-200"
                    set:html={title}
                  />
                )
              }
              <div>
                {subtitle && <p class="text-lg text-muted mb-5 dark:text-slate-300" set:html={subtitle} />}
                {
                  actions && (
                    <div class="flex flex-col sm:flex-row gap-3">
                      {Array.isArray(actions) ? (
                        actions.map((action) => (
                          <div class="flex">
                            <Button {...(action || {})} />
                          </div>
                        ))
                      ) : (
                        <Fragment set:html={actions} />
                      )}
                    </div>
                  )
                }
              </div>
              {content && <Fragment set:html={content} />}
            </div>
            <div class="flex justify-center lg:justify-start lg:order-2">
              {
                image && (
                  <div class="relative w-full max-w-lg">
                    {typeof image === 'string' ? (
                      <Fragment set:html={image} />
                    ) : (
                      <Image
                        class="w-full h-auto rounded-md"
                        widths={[400, 768, 1024, 2040]}
                        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                        loading="eager"
                        width={1024}
                        height={576}
                        {...image}
                      />
                    )}
                  </div>
                )
              }
            </div>
        </div>
      ) : (
        <>
          <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
            {
              tagline && (
                <p
                  class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase"
                  set:html={tagline}
                />
              )
            }
            {
              title && (
                <h1
                  class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
                  set:html={title}
                />
              )
            }
            <div class="max-w-3xl mx-auto">
              {subtitle && <p class="text-xl text-muted mb-6 dark:text-slate-300" set:html={subtitle} />}
              {
                actions && (
                  <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
                    {Array.isArray(actions) ? (
                      actions.map((action) => (
                        <div class="flex w-full sm:w-auto">
                          <Button {...(action || {})} class="w-full sm:mb-0" />
                        </div>
                      ))
                    ) : (
                      <Fragment set:html={actions} />
                    )}
                  </div>
                )
              }
            </div>
            {content && <Fragment set:html={content} />}
          </div>
          <div>
            {
              image && (
                <div class="relative m-auto max-w-5xl">
                  {typeof image === 'string' ? (
                    <Fragment set:html={image} />
                  ) : (
                    <Image
                      class="mx-auto rounded-md w-full"
                      widths={[400, 768, 1024, 2040]}
                      sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                      loading="eager"
                      width={1024}
                      height={576}
                      {...image}
                    />
                  )}
                </div>
              )
            }
          </div>
        </>
      )}
    </div>
  </div>
</section>



<style>

  h1  {
     background-image: linear-gradient(to right,#3180d3,#71fffd);
      background-clip: text;
      color: transparent;

  }


  </style>